require 'sinatra'
require 'sinatra/base'
require 'json_pure'

class HelloService <Sinatra::Base
  before do
      content_typ :json
  end

  get '/' do
    {:msg => "Hello World"}.to_json
  end

  get '/robots/:id' do |id|
    content_type :json
    return {
        :name => "Ultron",
        :comments => [
            "Not Very Fast",
            "Pretty Good Low-height shots"
        ]
    }.to_json
  end
end